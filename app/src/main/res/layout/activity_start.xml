<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kh.com.rupp.ckcc.lapitchatapp.StartActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Welcome to DeCode Chat"
        android:textSize="24sp"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="@string/need_a_new_account"
        android:background="@color/colorAccent"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/start_have_acc_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_reg_btn"
        android:layout_alignStart="@+id/start_reg_btn"
        android:layout_below="@+id/start_reg_btn"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:text="Already have account" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/start_have_acc_btn"
        android:layout_alignStart="@+id/start_have_acc_btn"
        android:src="@drawable/app_icon" />

</RelativeLayout>
